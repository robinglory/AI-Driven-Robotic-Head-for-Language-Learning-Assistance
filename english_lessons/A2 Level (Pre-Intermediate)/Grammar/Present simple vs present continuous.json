    "present_continuous": {
      "form": [
        "am/is/are + verb-ing",
        "Negative: am/is/are + not + verb-ing",
        "Questions: Am/Is/Are + subject + verb-ing"
      ],
      "spelling_rules": [
        "Base + ing (going)",
        "Drop e + ing (making)",
        "Double consonant + ing (sitting)"
      ],
      "uses": [
        "Actions happening now (I'm working)",
        "Temporary situations (I'm staying at a hotel)",
        "Changing situations (Her English is improving)",
        "With 'now' expressions (this week, today)"
      ]
    },
    "contrasts": [
      "Stative verbs (know, want) don't use continuous",
      "Temporary vs permanent situations",
      "Habits vs current actions"
